<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NextActivity"
    android:orientation="horizontal"
   android:background="@drawable/content_border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_content_border_id"
        android:background="@drawable/content_border"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_clicktocreateacc_id"
        android:text="Click  below to create an account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="17dp"
        android:textColor="#000000"
        android:textStyle="italic"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_createanaccount_id"
        android:text="Create An Account"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_clicktocreateacc_id"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons_border"
        android:textColor="#ffffff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textAllCaps="false"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_logintext_id"
        android:text="Already have an account?"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_below="@id/bt_createanaccount_id"
        android:layout_marginTop="80dp"
        android:textSize="17dp"
        android:textStyle="italic"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_login_id"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_logintext_id"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons_border"
        android:textColor="#ffffff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textAllCaps="false"/>




    </RelativeLayout>

</RelativeLayout>